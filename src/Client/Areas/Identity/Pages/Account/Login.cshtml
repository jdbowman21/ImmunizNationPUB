@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<div class="background-img login-background-img">
 
    <div class="container" style="height:100%;">

        <div class="login-container">

            <section>

                <div class="row">


                    <div class="col-lg-6 col-md-12">

                        <div class="card login-card shadow">
                            <div class="card-body">
                                <div class="login-branding">
                                    <img src="~/images/branding.png" />
                                </div>
                                <form id="account" method="post">
                                    <h4>
                                        <strong>Log in</strong>
                                    </h4>
                                    <p class="lead">ImmunizNation: Practical Strategies for Recommending Immunizations to Patients at Risk of Herpes Zoster.</p>
                                    <hr />
                                    <div class="form-group">
                                        <p>If this is the first time that you have visited this website, please click on “Register” to set up your account.</p>
                                        <a class="btn btn-success btn-block" asp-page="Register" asp-route-returnUrl="@Model.ReturnUrl">Register</a>
                                    </div>

                                    <hr/>

                                    <div asp-validation-summary="All" class="text-danger"></div>
                                    
                                    <div class="form-group">
                                        <label asp-for="Input.Email"></label>
                                        <input asp-for="Input.Email" class="form-control" />
                                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="Input.Password"></label>
                                        <input asp-for="Input.Password" class="form-control" />
                                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <div class="checkbox">
                                            <label asp-for="Input.RememberMe">
                                                <input asp-for="Input.RememberMe" />
                                                @Html.DisplayNameFor(m => m.Input.RememberMe)
                                            </label>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <button type="submit" class="btn btn-primary btn-block">Log in</button>
                                        
                                    </div>
                                    <div class="form-group">
                                        <p>
                                            <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
                                        </p>
                                        @*<p>
                                            <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
                                        </p>*@
                                        @*<p>
                                            <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Resend email confirmation</a>
                                        </p>*@
                                    </div>
                                </form>

                            </div>
                        </div>
                    </div>
                </div>




            </section>
        </div>
    </div>
  


</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
